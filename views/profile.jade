extends layout

block body       

  div(data-role="page")
    div.ui-bar(data-role="header", data-theme="b", data-position="fixed")
      h1 Knights on Bikes
      a.ui-btn-left(href="#", onclick="javascript:window.history.back();", data-icon="arrow-l", data-mini="true", data-role="button", data-inline="true") Back
      // a(href="/", data-icon="home") Home

    img.main-image(src="/images/#{user.state}.png", width="100%", height="200px")

    div(data-role="content")
      section.above-list

      div.content
        div.row
          div.col-xs-4
            img(src="/images/#{user.userid}.jpg", width="100px", height="100px")
          div.col-xs-8
            h3 #{user.username}
            p.welcome #{user.title.toUpperCase()} #{user.diocese.toUpperCase()}

    p.welcome.col-sm-12
      a(href="mailto:#{user.email}", data-role="button", data-icon="edit", data-corners="false", data-theme="b") Email

    p.welcome.col-sm-12
      a(href="tel:#{user.phone}", data-role="button", data-icon="forward", data-corners="false", data-theme="b") Call



    div.ui-bar(data-role="footer", data-position="fixed")
      div.ui-navbar.ui-mini(data-role="navbar", role="navigation")
        ul.ui-grid-d
          li
            a(href="/", data-icon="home", data-corners="false", data-shadow="false", data-iconshadow="true", data-wrapperels="span", data-iconpos="top", data-theme="a", data-inline="true", class="ui-btn ui-btn-inline ui-btn-icon-top ui-btn-up-a", data-transition="fade")
              span.ui-btn-inner 
                span.ui-btn-text Home
              span.ui-icon.ui-icon-grid.ui-icon-shadow &nbsp;
          // li
          //   a(href="/settings", data-icon="gear", data-corners="false", data-shadow="false", data-iconshadow="true", data-wrapperels="span", data-iconpos="top", data-theme="a", data-inline="true", class="ui-btn ui-btn-inline ui-btn-icon-top ui-btn-up-a", data-transition="fade")
          //     span.ui-btn-inner
          //       span.ui-btn-text Settings
          //     span.ui-icon.ui-icon-grid.ui-icon-shadow &nbsp;
          li
            a(href="/logout", data-icon="star", data-corners="false", data-shadow="false", data-iconshadow="true", data-wrapperels="span", data-iconpos="top", data-theme="a", data-inline="true", class="ui-btn ui-btn-inline ui-btn-icon-top ui-btn-up-a", data-transition="fade")
              span.ui-btn-inner 
                span.ui-btn-text States
              span.ui-icon.ui-icon-grid.ui-icon-shadow &nbsp;

